{{#with Hoadon}}
<form action="" method="POST" role="form">
	<div class="form-group">
		<label for="id">ID</label>
		<input type="text" class="form-control" id="id" name="OrderID" value="{{OrderID}}" readonly="true">
	</div>

	<div class="form-group">
		<label for="">Trạng thái hóa đơn</label>
		<br>
		{{!-- <input type="text" class="form-control" id="BrandID" name="BrandID" placeholder="Thương hiệu"> --}}
