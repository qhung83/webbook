<p style="color: gray;font-size: 20px;">Danh Sách sản phẩm</p>
<a class="btn btn-large btn-block btn-outline-success" href="/admin/brand/add" role="button" style="width: 25%;float: right;">
	Thêm Sản Phẩm Mới
</a>
<br>
<br>
<table class="table" style="color: gray;">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Tên Sản Phẩm</th>
			<th scope="col" style="padding-left: 26%;">&nbsp;Thao Tác</th>
			
		</tr>
	</thead>
	<tbody>
		{{#each brands}}
		<tr>
			<td scope="row">{{BrandID}}</td>
			<td>{{BrandName}}</td>
			<td class="text-right">
				<a class="btn btn-danger" href="/admin/brand/delete?id={{BrandID}}" role="button" style="background-color: #F4F7FA;border:0px solid #F4F7FA">
					<i class="fa fa-trash" aria-hidden="true" style="color: gray;font-size:20px;"></i>
				</a>
				<a class="btn btn-primary" href="/admin/brand/edit?id={{BrandID}}" role="button" style="background-color: #F4F7FA;border:0px solid #F4F7FA">
					<i class="fa fa-pencil" aria-hidden="true" style="color: gray;font-size: 20px;"></i>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
